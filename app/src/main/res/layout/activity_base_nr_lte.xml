<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".lte_nr.BaseNrLteActivity">
    <RelativeLayout
        android:background="@drawable/base_message_shape"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x30">
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/gg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x45"
        android:layout_marginTop="@dimen/x20"
        android:background="@drawable/base_message_shape"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10">

        <ImageView
            android:id="@+id/finsh"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:padding="10dp"
            android:src="@mipmap/backnew" />

        <TextView
            android:id="@+id/mytitle"
            android:layout_width="@dimen/x100"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:gravity="center"
            android:text="信号查看"
            android:textColor="#ffffff"
            android:textSize="@dimen/x18" />

        <ImageView
            android:id="@+id/add"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp_10"
            android:src="@mipmap/add"
            android:visibility="invisible" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/Re_sim"
        android:layout_below="@+id/gg"
        android:background="@drawable/base_message_shape"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x26">
        <LinearLayout
            android:layout_marginLeft="@dimen/x20"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvSim1"
                android:text="卡槽1"
                android:gravity="center"
                android:textColor="#01E6FC"
                android:textSize="@dimen/x10"
                android:background="@drawable/base_msg_tab"
                android:layout_width="@dimen/x45"
                android:layout_height="@dimen/x26">
            </TextView>
            <TextView
                android:id="@+id/tvSim2"
                android:text="卡槽2"
                android:gravity="center"
                android:textSize="@dimen/x10"
                android:layout_width="@dimen/x45"
                android:layout_height="@dimen/x26">
            </TextView>
        </LinearLayout>
    </RelativeLayout>
    <com.google.android.material.tabs.TabLayout
        android:layout_below="@+id/gg"
        android:id="@+id/tab"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        >
    </com.google.android.material.tabs.TabLayout>
    <com.sm.smmap.smmap.Utils.MyViewPager
        android:id="@+id/vp"
        android:layout_below="@+id/Re_sim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.sm.smmap.smmap.Utils.MyViewPager>
</RelativeLayout>